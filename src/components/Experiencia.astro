---
import Badge from './Badge.astro';

const EXPERIENCIAS = [
  {
    title: 'Frontend en Agencia Vipe Web',
    description:
      'En Vipe Web, desarrollo y mantengo interfaces de usuario atractivas y optimizadas, colaborando en proyectos diversos para mejorar la experiencia de usuario en aplicaciones web o landing page.',
  },
];
---

<section class="relative space-y-12 max-w-4xl" id="experiencia">
  <h1 class="font-bold text-4xl">Experiencia laboral</h1>
  <div
    class="relative before:top-0 before:left-0 before:absolute before:bg-black pl-8 before:w-1 before:h-full"
  >
    <div class="flex flex-col space-y-12">
      {
        EXPERIENCIAS.map(({ title, description }) => (
          <div class="flex lg:flex-row flex-col space-x-0 lg:space-x-12 space-y-4 lg:space-y-0">
            <h1 class="my-auto w-full font-bold text-2xl whitespace-nowrap cursor-default">
              <Badge>{title}</Badge>
            </h1>
            <p class="text-lg cursor-default">{description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
