---
import '@fontsource-variable/onest';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://cdn.shoplightspeed.com/shops/610129/themes/18100/v/746488/assets/main-logo.png?20230614202627"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="p-4">
    <div
      class="top-0 left-0 z-[-2] fixed bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] bg-neutral-950 w-screen h-screen"
    >
    </div>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: 'Onest Variable', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    color: #fff;
  }
</style>
